{
  "name": "rift/core",
  "bin": ["bin/rift"],
  "version": "1.0.0",
  "type": "library",
  "autoload": {
    "psr-4": {
      "Rift\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "vlucas/phpdotenv": "^5.5",
    "firebase/php-jwt": "^6.8",    
    "ext-openssl": "*",
    "ext-sodium": "*",
    "paragonie/sodium_compat": "^2.0",
    "symfony/console": "^7.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "pestphp/pest": "^2.0"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
